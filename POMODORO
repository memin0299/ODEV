POMODORO ODEV
package com.example.focusappfinal;

import android.os.Bundle;
import android.os.CountDownTimer;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ImageView;
import android.widget.TextView;
import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {

    private EditText editDuration;
    private Button startButton;
    private TextView tvStatus;
    private ImageView imageTree;
    private CountDownTimer countDownTimer;
    private boolean isRunning = false;
    private long remainingTime;
    private int treeGrowthStage = 0;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        editDuration = findViewById(R.id.editDuration);
        startButton = findViewById(R.id.startButton);
        tvStatus = findViewById(R.id.tvStatus);
        imageTree = findViewById(R.id.imageTree);

    }

    public void onStartButtonClick(View view){
        if(isRunning){
            stopTimer();
        }else {
            startTimer();
        }
    }


    private void startTimer() {
        String durationStr = editDuration.getText().toString();
        if (durationStr.isEmpty()) {
            tvStatus.setText("Lütfen bir süre girin.");
            return;
        }

        long duration = Long.parseLong(durationStr) * 60 * 1000; // Dakikayı milisaniyeye çevir
        remainingTime = duration;

        countDownTimer = new CountDownTimer(duration, 1000) {
            @Override
            public void onTick(long millisUntilFinished) {
                remainingTime = millisUntilFinished;
                int minutes = (int) (millisUntilFinished / 1000) / 60;
                int seconds = (int) (millisUntilFinished / 1000) % 60;
                tvStatus.setText(String.format("Kalan Süre: %02d:%02d", minutes, seconds));
            }

            @Override
            public void onFinish() {
                tvStatus.setText("Tebrikler! Süre tamamlandı.");
                growTree();
                isRunning = false;
                startButton.setText("Başlat");
            }
        }.start();

        isRunning = true;
        startButton.setText("Durdur");
    }

    private void stopTimer() {
        if (countDownTimer != null) {
            countDownTimer.cancel();
        }
        tvStatus.setText("Duraklatıldı.");
        isRunning = false;
        startButton.setText("Başlat");
    }

    private void growTree() {
        treeGrowthStage++;
        switch (treeGrowthStage) {
            case 1:
                imageTree.setImageResource(R.drawable.ic_tree_stage_1);
                break;
            case 2:
                imageTree.setImageResource(R.drawable.ic_tree_stage_2);
                break;
            case 3:
                imageTree.setImageResource(R.drawable.ic_tree_stage_3);
                break;
            default:
                imageTree.setImageResource(R.drawable.ic_tree_stage_4);
                tvStatus.setText("Ağacınız tam anlamıyla büyüdü!");
                break;
        }
    }
}
   






















